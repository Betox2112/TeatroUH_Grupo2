@model IEnumerable<TeatroUH.Domain.Entities.Showtime>

@{
    ViewData["Title"] = "Funciones";
}

<div class="page-header">
    <div>
        <h2 class="page-title">Funciones</h2>
        <p class="page-subtitle">Publicar funciones (obra + fecha + teatro).</p>
    </div>

    <a asp-action="Create" class="btn btn-primary">
        + Nueva función
    </a>
</div>

<div class="card admin-card">
    <div class="card-body p-0">

        <div class="table-wrap">
            <table class="table table-dark table-hover table-admin align-middle mb-0">
                <thead>
                    <tr>
                        <th>Obra</th>
                        <th>Teatro</th>
                        <th class="text-nowrap">Fecha</th>
                        <th class="text-end">Precio</th>
                        <th class="text-end">Capacidad</th>
                        <th class="text-end">Vendidos</th>
                        <th class="text-end">Disponibles</th>
                        <th>Estado</th>
                        <th>Activa</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted py-4">
                                No hay funciones registradas todavía.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var s in Model)
                        {
                            <tr>
                                <td data-label="Obra" class="fw-semibold">
                                    @s.Play?.Title
                                </td>

                                <td data-label="Teatro">
                                    @s.Theater?.Name
                                </td>

                                <td data-label="Fecha" class="text-nowrap">
                                    @s.StartDateTime.ToString("yyyy-MM-dd HH:mm")
                                </td>

                                <td data-label="Precio" class="text-end">
                                    ₡@s.BasePrice.ToString("N0")
                                </td>

                                <td data-label="Capacidad" class="text-end">@s.Capacity</td>
                                <td data-label="Vendidos" class="text-end">@s.SeatsSold</td>
                                <td data-label="Disponibles" class="text-end">@s.SeatsAvailable</td>

                                <td data-label="Estado">
                                    <span class="badge badge-status">@s.Status</span>
                                </td>

                                <td data-label="Activa">
                                    @if (s.IsActive)
                                    {
                                        <span class="badge badge-on">Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-off">No</span>
                                    }
                                </td>

                                <td data-label="Acciones" class="text-end">
                                    <div class="actions">
                                        <a asp-action="Edit" asp-route-id="@s.ShowtimeId" class="btn btn-outline-light btn-sm">
                                            Editar
                                        </a>

                                        <form asp-action="ToggleActive" asp-route-id="@s.ShowtimeId" method="post" class="m-0">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-warning btn-sm">
                                                @(s.IsActive ? "Desactivar" : "Activar")
                                            </button>
                                        </form>

                                        <form asp-action="Delete" asp-route-id="@s.ShowtimeId" method="post" class="m-0"
                                              onsubmit="return confirm('¿Seguro que deseas eliminar esta función?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<style>
    /* ===== Layout general ===== */
    .admin-card {
        border-radius: 18px;
        overflow: hidden;
        border: 1px solid rgba(255,255,255,0.08);
        background: rgba(0,0,0,0.25);
        backdrop-filter: blur(6px);
    }

    .table-wrap {
        width: 100%;
        overflow-x: auto; /* desktop: si no cabe, scroll horizontal */
        -webkit-overflow-scrolling: touch;
    }

    .table-admin th, .table-admin td {
        padding: 14px 14px !important;
        vertical-align: middle !important;
        white-space: nowrap;
    }

    .table-admin thead th {
        position: sticky;
        top: 0;
        z-index: 2;
        background: rgba(0,0,0,0.85);
        border-bottom: 1px solid rgba(255,255,255,0.10);
        font-weight: 800;
        letter-spacing: .2px;
    }

    .text-end {
        text-align: right !important;
    }

    .text-nowrap {
        white-space: nowrap !important;
    }

    /* ===== Badges ===== */
    .badge {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 6px 12px;
        border-radius: 999px;
        font-size: 12px;
        border: 1px solid rgba(255,255,255,0.12);
        background: rgba(255,255,255,0.05);
    }

    .badge-status {
        background: rgba(255,255,255,0.06);
    }

    .badge-on {
        background: rgba(0, 170, 110, 0.18);
        border-color: rgba(0, 170, 110, 0.35);
    }

    .badge-off {
        background: rgba(255, 80, 80, 0.12);
        border-color: rgba(255, 80, 80, 0.28);
    }

    /* ===== Acciones: compactas y alineadas ===== */
    .actions {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        flex-wrap: wrap;
    }

        .actions .btn {
            border-radius: 12px !important;
            padding: 8px 12px;
            min-width: 96px;
        }

    
</style>
