@model IEnumerable<TeatroUH.Domain.Entities.Theater>
@{
    ViewData["Title"] = "Teatros / Salas";
}

<div class="page-header">
    <div>
        <h2 class="page-title">Teatros / Salas</h2>
        <p class="page-subtitle">CRUD de teatros: ubicación, capacidad y estado.</p>
    </div>

    <a asp-action="Create" class="btn btn-primary">+ Nuevo teatro</a>
</div>

<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-dark table-hover table-admin">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Ubicación</th>
                        <th class="text-end">Capacidad</th>
                        <th>Estado</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Name</td>
                            <td>@(string.IsNullOrWhiteSpace(t.Location) ? "-" : t.Location)</td>
                            <td class="text-end">@t.Capacity</td>
                            <td>
                                @if (t.IsActive)
                                {
                                    <span class="badge bg-success">Activo</span>
                                }
                                else
                                {

                                    <span class="badge bg-secondary">Inactivo</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@t.TheaterId" class="btn btn-sm btn-outline-light">
                                    Editar
                                </a>

                                <form asp-action="ToggleActive" asp-route-id="@t.TheaterId" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm @(t.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                        @(t.IsActive ? "Desactivar" : "Activar")
                                    </button>
                                </form>

                                <form asp-action="Delete" asp-route-id="@t.TheaterId" method="post" class="d-inline"
                                      onsubmit="return confirm('¿Eliminar este teatro?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        Eliminar
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
