@model TeatroUH.Web.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Confirmar reserva";
}

<div class="max-w-2xl mx-auto px-6 py-10">

    <h1 class="text-2xl font-semibold text-white mb-2">
        Confirmar reserva (pago en efectivo)
    </h1>

    <p class="text-gray-400 mb-6">
        Completá tus datos para finalizar la reserva.
    </p>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="mb-4 rounded-lg border border-red-500/30 bg-red-500/10 p-4 text-red-300">
            Revisá los datos ingresados.
        </div>
    }

    <form asp-action="Confirmar" method="post" class="space-y-5">
        @Html.AntiForgeryToken()

        <div>
            <label asp-for="CustomerName" class="block text-sm text-gray-300 mb-1">
                Nombre completo
            </label>
            <input asp-for="CustomerName"
                   class="w-full rounded-md bg-black/30 border border-white/15 px-3 py-2 text-white" />
            <span asp-validation-for="CustomerName" class="text-sm text-red-400"></span>
        </div>

        <div>
            <label asp-for="CustomerEmail" class="block text-sm text-gray-300 mb-1">
                Email
            </label>
            <input asp-for="CustomerEmail"
                   class="w-full rounded-md bg-black/30 border border-white/15 px-3 py-2 text-white" />
            <span asp-validation-for="CustomerEmail" class="text-sm text-red-400"></span>
        </div>

        <div class="flex gap-3 pt-4">
            <button type="submit"
                    class="rounded-lg px-6 py-2 font-semibold bg-[#C9A24D] text-black">
                Confirmar reserva
            </button>

            <a asp-action="Index"
               class="rounded-lg px-6 py-2 font-semibold border border-white/15 text-white">
                Volver al carrito
            </a>
        </div>
    </form>

</div>
