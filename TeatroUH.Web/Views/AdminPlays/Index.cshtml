@model List<TeatroUH.Domain.Entities.Play>
@{
    ViewData["Title"] = "Cartelera (Obras)";
}

<div class="p-8">
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-3xl font-bold text-white">Cartelera (Obras)</h1>
            <p class="text-gray-400 mt-1">Crear, editar, activar/desactivar y subir imagen.</p>
        </div>

        <a asp-action="Create"
           class="px-4 py-2 rounded bg-[#B89B5E] text-black font-bold">
            + Nueva Obra
        </a>
    </div>

    <div class="mt-6 overflow-x-auto">
        <table class="min-w-full text-sm text-gray-200 border border-gray-800">
            <thead class="bg-black/40">
                <tr>
                    <th class="p-3 text-left border-b border-gray-800">Imagen</th>
                    <th class="p-3 text-left border-b border-gray-800">Título</th>
                    <th class="p-3 text-left border-b border-gray-800">Duración</th>
                    <th class="p-3 text-left border-b border-gray-800">Clasif.</th>
                    <th class="p-3 text-left border-b border-gray-800">Estado</th>
                    <th class="p-3 text-left border-b border-gray-800">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr class="border-b border-gray-900">
                        <td class="p-3">
                            <img src="@(string.IsNullOrWhiteSpace(p.ImageUrl) ? "https://via.placeholder.com/120x80" : p.ImageUrl)"
                                 class="w-28 h-16 object-cover rounded border border-gray-700" />
                        </td>
                        <td class="p-3">
                            <div class="font-semibold">@p.Title</div>
                            <div class="text-gray-400 text-xs line-clamp-2">@p.Description</div>
                        </td>
                        <td class="p-3">@p.DurationMinutes min</td>
                        <td class="p-3">@p.Rating</td>
                        <td class="p-3">
                            @if (p.IsActive)
                            {
                                <span class="px-2 py-1 rounded bg-green-900/20 border border-green-700 text-green-200">Activa</span>
                            }
                            else
                            {
                                <span class="px-2 py-1 rounded bg-red-900/20 border border-red-700 text-red-200">Inactiva</span>
                            }
                        </td>
                        <td class="p-3 flex gap-2">
                            <a asp-action="Edit" asp-route-id="@p.PlayId"
                               class="px-3 py-1 rounded bg-black/30 border border-gray-700">
                                Editar
                            </a>

                            <form asp-action="ToggleActive" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@p.PlayId" />
                                <button class="px-3 py-1 rounded bg-[#B89B5E] text-black font-bold">
                                    @(p.IsActive ? "Desactivar" : "Activar")
                                </button>
                            </form>

                            <form asp-action="Delete" method="post" onsubmit="return confirm('¿Eliminar esta obra?');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@p.PlayId" />
                                <button class="px-3 py-1 rounded bg-red-600 text-white font-bold">
                                    Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        <a asp-controller="Admin" asp-action="Index"
           class="inline-block px-4 py-2 rounded bg-black/30 border border-gray-700 text-gray-200">
            Volver
        </a>
    </div>
</div>
